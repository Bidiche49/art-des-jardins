# ===========================================
# Art & Jardin - Production Environment
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to git!
# ===========================================

# -----------------------------
# Domain Configuration
# -----------------------------
DOMAIN=artjardin.fr
ACME_EMAIL=contact@artjardin.fr

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
POSTGRES_USER=artjardin
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD>
POSTGRES_DB=artjardin_prod

# -----------------------------
# JWT Authentication
# -----------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=<GENERATE_64_CHAR_SECRET>
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# -----------------------------
# S3 Storage (Scaleway Object Storage)
# -----------------------------
S3_ENDPOINT=https://s3.fr-par.scw.cloud
S3_ACCESS_KEY=<SCALEWAY_ACCESS_KEY>
S3_SECRET_KEY=<SCALEWAY_SECRET_KEY>
S3_BUCKET=artjardin-prod
S3_REGION=fr-par

# -----------------------------
# SMTP (Email - Brevo/Mailjet/Resend)
# -----------------------------
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=<SMTP_USER>
SMTP_PASSWORD=<SMTP_PASSWORD>
SMTP_FROM="Art & Jardin <contact@artjardin.fr>"

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=info
TRAEFIK_LOG_LEVEL=INFO

# -----------------------------
# Traefik Dashboard
# -----------------------------
# Generate with: htpasswd -nb admin <password>
# Format: username:password_hash
TRAEFIK_DASHBOARD_AUTH=admin:<HTPASSWD_HASH>

# -----------------------------
# Site Vitrine (Next.js)
# -----------------------------
NEXT_PUBLIC_WEB3FORMS_KEY=<WEB3FORMS_API_KEY>
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=artjardin.fr
NEXT_PUBLIC_API_URL=https://api.artjardin.fr

# -----------------------------
# Contact Form
# -----------------------------
CONTACT_RECIPIENT_EMAIL=artdesjardins49@gmail.com
