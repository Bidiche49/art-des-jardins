# ===========================================
# Art & Jardin - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# See docs/ENVIRONMENT.md for detailed documentation
# ===========================================

# -----------------------------
# General
# -----------------------------
NODE_ENV=development                  # development | test | production

# -----------------------------
# Database (PostgreSQL)
# -----------------------------
POSTGRES_USER=artjardin               # Database user
POSTGRES_PASSWORD=artjardin_dev       # Database password
POSTGRES_DB=artjardin                 # Database name
DATABASE_URL=postgresql://artjardin:artjardin_dev@localhost:5432/artjardin

# -----------------------------
# API Server
# -----------------------------
API_PORT=3000                         # API port
API_HOST=0.0.0.0                      # API host (0.0.0.0 for Docker)

# -----------------------------
# JWT Authentication
# -----------------------------
JWT_SECRET=your-secret-key            # Generate with: openssl rand -base64 48
JWT_EXPIRES_IN=15m                    # Access token expiry
JWT_REFRESH_EXPIRES_IN=7d             # Refresh token expiry

# -----------------------------
# S3 Storage
# -----------------------------
S3_ENDPOINT=                          # S3 endpoint (e.g., https://s3.fr-par.scw.cloud)
S3_ACCESS_KEY=                        # S3 access key
S3_SECRET_KEY=                        # S3 secret key
S3_BUCKET=art-et-jardin               # S3 bucket name
S3_REGION=fr-par                      # S3 region

# -----------------------------
# Email (SMTP)
# -----------------------------
SMTP_HOST=                            # SMTP server (e.g., smtp-relay.brevo.com)
SMTP_PORT=587                         # SMTP port
SMTP_USER=                            # SMTP username
SMTP_PASSWORD=                        # SMTP password
SMTP_FROM=noreply@artjardin.fr        # From email address

# -----------------------------
# Frontend URLs
# -----------------------------
NEXT_PUBLIC_API_URL=http://localhost:3000   # API URL for vitrine
NEXT_PUBLIC_SITE_URL=http://localhost:3001  # Vitrine URL
VITE_API_URL=http://localhost:3000          # API URL for PWA

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=debug                       # error | warn | info | debug

# -----------------------------
# Rate Limiting (production)
# -----------------------------
THROTTLE_TTL=60                       # Time window in seconds
THROTTLE_LIMIT=100                    # Max requests per window

# -----------------------------
# CORS (production)
# -----------------------------
CORS_ORIGINS=http://localhost:3001    # Comma-separated allowed origins
